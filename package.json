{
  "name": "tailwind-lerp-colors",
  "version": "1.1.6",
  "description": "Interpolate between defined colors in Tailwind config for additional color stops",
  "main": "./dist/cjs/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "build:clean": "rm -rf ./dist",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "build": "npm-run-all build:clean compile "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brandonmcconnell/tailwind-lerp-colors.git"
  },
  "keywords": [
    "tailwind",
    "plugin",
    "color",
    "interpolation",
    "functions",
    "linear",
    "interpolate-colors",
    "chroma",
    "color-space",
    "color-modes",
    "interpolate",
    "color-spaces",
    "color-mode"
  ],
  "author": "Brandon McConnell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brandonmcconnell/tailwind-lerp-colors/issues"
  },
  "homepage": "https://github.com/brandonmcconnell/tailwind-lerp-colors#readme",
  "dependencies": {
    "chroma-js": "^2.4.2",
    "tailwindcss": "^3.0.2"
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.0",
    "@types/jest": "^29.5.2",
    "@types/tailwindcss": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "exports": {
    "types": "./dist/types/index.d.ts",
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js",
    "default": "./dist/esm/index.js",
    "node": "./dist/cjs/index.js"
  }
}
